<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101619"
    android:backgroundTint="#101619">

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="#101619"
        android:baselineAligned="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="?attr/actionModeCloseDrawable"
        app:iconTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/titlename"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#00FA00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/username"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <TextView
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/email"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber" />

    <TextView
        android:id="@+id/language"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Language"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/darkmode"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Dark Mode"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language" />

    <TextView
        android:id="@+id/notification"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Allow Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkmode" />

    <TextView
        android:id="@+id/passplus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Two-Factor Authentication"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification" />

    <TextView
        android:id="@+id/additionalhelp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Additional Help"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passplus" />

    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Phone Number"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/dowloaddata"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Download Data"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/additionalhelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/additionalhelp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:background="#7CB342"
        android:backgroundTint="#101619"
        android:buttonTint="#43A047"
        android:drawableTint="#43A047"
        android:foregroundTint="#43A047"
        android:shadowColor="#43A047"
        android:textColor="#00FA00"
        android:textColorHint="#00FA00"
        android:textSize="25sp"
        android:thumbTint="#00FA00"
        app:layout_constraintBottom_toTopOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/darkmode"
        app:layout_constraintTop_toBottomOf="@+id/language"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Off" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:background="#101619"
        android:text="Off"
        android:textColor="#00FA00"
        android:textSize="25sp"
        android:thumbTint="#00FA00"
        app:layout_constraintBottom_toBottomOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/notification"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="Off"
        android:textColor="#00FA00"
        android:textSize="25sp"
        android:thumbTint="#00FA00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/passplus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>